# API Keys
OPENAI_API_KEY=your-key-here

# Configuración de modelos
EMBEDDING_MODEL_NAME=text-embedding-3-small
MODEL_NAME=gpt-4o
TEMPERATURE=0.7
MAX_TOKENS=5000

# Configuración de Base de Datos
# Valores por defecto para desarrollo local
DB_TYPE=sqlite                    # sqlite o postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=udcito
DB_USER=udcito
DB_PASSWORD=udcito

# Rutas de Base de Datos
# En desarrollo local
CHROMA_PATH=/data/chroma         # Se mapeará al contenedor
SQLITE_PATH=/data/sqlite         # Se mapeará al contenedor

# En producción, usar rutas absolutas o URLs
# CHROMA_PATH=postgresql://user:pass@host:port/db
# SQLITE_PATH=/path/to/production/sqlite

# Configuración de recuperación
RETRIEVER_K=10